<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="XRefreshLayout">
        <!-- Optional. If you put header and content in xml, you can you these to specify them. -->
        <attr name="xrl_header" format="reference" />
        <attr name="xrl_content" format="reference" />
        <attr name="xrl_footer" format="reference" />

        <!-- the resistance when you are moving the frame -->
        <attr name="xrl_resistance" format="float" />

        <!-- the ration of the height of the header to trigger refresh -->
        <attr name="xrl_ratio_of_header_height_to_refresh" format="float" />

        <attr name="xrl_duration_to_close" format="integer" />
        <attr name="xrl_duration_to_close_header" format="integer" />

        <!-- pull to refresh, otherwise release to refresh, default is release to refresh -->
        <attr name="xrl_pull_to_fresh" format="boolean" />

        <!-- keep header when refreshing-->
        <attr name="xrl_keep_header_when_refresh" format="boolean" />
    </declare-styleable>

</resources>